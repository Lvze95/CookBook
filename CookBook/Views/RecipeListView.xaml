<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CookBook.ViewModels"
             x:Class="CookBook.Views.RecipeListView"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <ImageButton
                Source="backLight"
                Grid.Column="0"
                Grid.Row="0"
                CornerRadius="10"
                Margin="10, 10, 5, 5" />
            <Frame BackgroundColor="Green"
               Grid.Column="1"
               Grid.Row="0"
               Margin="5, 10, 10, 5"
               CornerRadius="10"
                   HasShadow="True">
                <Label Text=""
                   FontSize="40"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="White" />
            </Frame>

            <CollectionView
                ItemsSource="{Binding RecipesSource}"
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:RecipeItemViewModel">
                        <StackLayout>
                            <Image Source="{Binding Image}"
                                Grid.Column="0"
                                Grid.Row="1"
                                Grid.RowSpan="2"
                                Margin="10, 20, 5, 5" />
                            <Label Text="{ Binding Title}"
                                Grid.Column="1"
                                Grid.Row="1"
                                Margin="5, 20, 10, 5"
                                TextColor="Black" />
                            <Label Text="{Binding Description}"
                                Grid.Column="1"
                                Grid.Row="2"
                                Margin="5, 5, 10, 5"
                                TextColor="Black" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ContentPage.Content>
</ContentPage>