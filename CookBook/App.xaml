<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookBook.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="FontFamily" Value="Font.ttf#Font"/>
            </Style>
            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="Font.ttf#Font"/>
            </Style>

            <Color x:Key="TextColor">white</Color>
            <Color x:Key="TextColorDark">black</Color>

            <Color x:Key="WindowBackgroundColor">white</Color>
            <Color x:Key="WindowBackgroundColorDark">black</Color>

            <Color x:Key="LabelBackgroundColor">green</Color>
            <Color x:Key="LabelBackgroundColorDark">DarkOrange</Color>
            
            
        </ResourceDictionary>
    </Application.Resources>
</Application>